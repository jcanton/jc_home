[diff]
	submodule = log
[credential]
	helper = cache --timeout=3600
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
	decorate = true
[color "status"]
	added = green
	changed = red bold
	untracked = magenta bold
[color "branch"]
	remote = yellow
[push]
	default = current
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
